# NextDocs Environment Variables
# Copy this file to .env.local and fill in your values

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/nextdocs"

# PostgreSQL Database (for Docker)
POSTGRES_USER="nextdocs"
POSTGRES_PASSWORD="your-secure-password-here"
POSTGRES_DB="nextdocs"

# NextAuth.js
NEXTAUTH_URL="http://localhost:9980"
NEXTAUTH_SECRET="your-secret-key-min-32-chars-long-change-this"

# Encryption for storing credentials (64-character hex string)
ENCRYPTION_KEY="0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef"

# Azure AD SSO (Optional - can also be configured via admin portal)
AZURE_AD_CLIENT_ID=""
AZURE_AD_CLIENT_SECRET=""
AZURE_AD_TENANT_ID=""

# GitHub OAuth (Optional)
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Azure DevOps (for repository sync)
AZURE_DEVOPS_ORG=""
AZURE_DEVOPS_PAT=""

# GitHub (for repository sync)
GITHUB_ORG=""
GITHUB_PAT=""

# Application Settings
NODE_ENV="development"
PORT=9980

# Logging
LOG_LEVEL="info"

# ISR Revalidation (in seconds)
REVALIDATE_INTERVAL=3600

# Feature Flags
ENABLE_SEARCH="true"
ENABLE_BLOG="true"
ENABLE_API_DOCS="true"
ENABLE_MERMAID="true"
ENABLE_DRAFT_FILTER="true"

# User Role Defaults
DEFAULT_USER_ROLE="user"  # Options: user, editor, admin
