  userId    String    // Always required since auth is mandatory
  page      String    // e.g., "/features/awesome-feature"
  lastSeen  DateTime  @default(now()) @updatedAt
  createdAt DateTime  @default(now())
  
  user      User      @relation("PageViewers", fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, page])
  @@index([page])
  @@index([lastSeen])
}

model FeatureMerge {
  id                  String    @id @default(uuid())
  parentId            String
  childId             String
  mergedBy            String
  mergedAt            DateTime  @default(now())
  originalDescription String    @db.Text
  mergedDescription   String    @db.Text
  
  parent              FeatureRequest @relation("ParentMerges", fields: [parentId], references: [id], onDelete: Cascade)
  child               FeatureRequest @relation("ChildMerges", fields: [childId], references: [id], onDelete: Cascade)
  merger              User      @relation("FeatureMerger", fields: [mergedBy], references: [id])
  
