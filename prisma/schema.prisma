  inAppEnabled         Boolean   @default(true)
  inAppNewFeatures     Boolean   @default(true)
  inAppStatusChanges   Boolean   @default(true)
  inAppNewComments     Boolean   @default(true)
  inAppMentions        Boolean   @default(true)
  
