  emailEnabled         Boolean   @default(true)
  emailNewFeatures     Boolean   @default(true)
  emailStatusChanges   Boolean   @default(true)
  emailNewComments     Boolean   @default(true)
  emailWeeklyDigest    Boolean   @default(false)
  
  // Teams notifications
  teamsEnabled         Boolean   @default(false)
  teamsWebhook         String?
  teamsNewFeatures     Boolean   @default(false)
  teamsStatusChanges   Boolean   @default(false)
  teamsNewComments     Boolean   @default(false)
  teamsChannel         String?
  
