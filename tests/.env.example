# Test Environment Variables
# FOR CI/CD PIPELINES ONLY
# Local development: Credentials are prompted at runtime (more secure!)

# Base URL for E2E tests
TEST_BASE_URL=http://localhost:9981

# Test user credentials (CI/CD only - DO NOT use for local development)
# For local: You'll be prompted when running tests
TEST_USER_EMAIL=admin@nextdocs.local
TEST_USER_PASSWORD=your_secure_password_here

# Database connection for CLI tests
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/nextdocs

# Test timeouts (milliseconds)
TEST_TIMEOUT=30000
E2E_TIMEOUT=60000

# Playwright settings
PLAYWRIGHT_BROWSERS=chromium,firefox,webkit
HEADLESS=true

# Test data settings
GENERATE_TEST_DATA=false
CLEANUP_TEST_DATA=true

# Debug settings
DEBUG_TESTS=false
SCREENSHOT_ON_FAILURE=true
VIDEO_ON_FAILURE=true

# CI/CD indicator
# CI=true (automatically set by most CI/CD platforms)
