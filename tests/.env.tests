# Test Environment Variables
# Copy this to .env.test and update with your values

# Base URL for E2E tests
TEST_BASE_URL=http://localhost:9981

# Test user credentials
TEST_USER_EMAIL=admin@nextdocs.local
TEST_USER_PASSWORD=admin

# Test admin credentials
TEST_ADMIN_EMAIL=admin@nextdocs.local
TEST_ADMIN_PASSWORD=admin

# Database connection for tests
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/nextdocs

# Test timeouts (milliseconds)
TEST_TIMEOUT=30000
E2E_TIMEOUT=60000

# Playwright settings
PLAYWRIGHT_BROWSERS=chromium,firefox,webkit
HEADLESS=true

# Test data settings
GENERATE_TEST_DATA=false
CLEANUP_TEST_DATA=true

# Debug settings
DEBUG_TESTS=false
SCREENSHOT_ON_FAILURE=true
VIDEO_ON_FAILURE=true
